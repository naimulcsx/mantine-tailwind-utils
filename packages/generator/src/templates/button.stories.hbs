import type { Meta, StoryObj } from "@storybook/react";
import { {{componentName}} } from "../index";

const meta = {
  title: "Components/{{componentName}}",
  component: {{componentName}},
  parameters: {
    layout: "centered",
  },
  tags: ["autodocs"],
  argTypes: {
    {{#if hasVariants}}
    variant: {
      control: { type: "select" },
      options: [{{{variants}}}],
      description: "{{componentName}} variant style",
    },
    {{/if}}
    {{#if hasSizes}}
    size: {
      control: { type: "select" },
      options: [{{{sizes}}}],
      description: "{{componentName}} size",
    },
    {{/if}}
    children: {
      control: "text",
      description: "{{componentName}} content",
    },
  },
} satisfies Meta<typeof {{componentName}}>;

export default meta;
type Story = StoryObj<typeof meta>;

{{#each stories}}
// {{name}} {{../componentName}} story
export const {{name}}: Story = {
  args: {
    {{#if args.variant}}variant: {{{args.variant}}},{{/if}}
    {{#if args.size}}size: {{{args.size}}},{{/if}}
    {{#if args.disabled}}disabled: {{{args.disabled}}},{{/if}}
    children: {{{args.children}}},
  },
};

{{/each}} 